<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.keithr.funmanager.MainActivity"
    android:background="#08163d"
    android:gravity="bottom|center"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fun Manager"
        android:id="@+id/textView"
        android:textColor="#15dbf1"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Come here to Save the Fun!"
        android:id="@+id/textView4"
        android:textColor="#18f2c2"
        android:textSize="20dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tabViewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Store Image"
                        android:id="@+id/StoreImageview"
                        android:textColor="#2bf4e6"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:id="@+id/button2"
                        android:background="#72e8a1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Take a Picture or a Video!"
                        android:id="@+id/textView19"
                        android:textColor="#2bf4e6"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:text="Capture Moment!"
                        android:id="@+id/button3"
                        android:background="#72e8a1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Take a moment to remember the fun!"
                        android:id="@+id/textView20"
                        android:textColor="#2bf4e6"
                        android:textStyle="bold" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:text="To the Fun!"
                        android:id="@+id/ContentButton"
                        android:background="#72e8a1" />

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/NameofUser"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Welcome Aboard, Have some Fun!"
                        android:id="@+id/textView21"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#2bf4e6"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabUserInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:nestedScrollingEnabled="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Name:"
                        android:id="@+id/textView5"
                        android:layout_marginBottom="10dp"
                        android:textColor="#22efd7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Age:"
                        android:id="@+id/ageview"
                        android:layout_marginBottom="10dp"
                        android:textColor="#22efd7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Favorite Color: "
                        android:id="@+id/favColorview"
                        android:layout_marginBottom="10dp"
                        android:textColor="#22efd7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Favorite Food:"
                        android:id="@+id/FavFoodview"
                        android:layout_marginBottom="10dp"
                        android:textColor="#22efd7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Best Moment:"
                        android:id="@+id/textView9"
                        android:layout_marginBottom="10dp"
                        android:textColor="#22efd7" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabmainmenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Take Photo/Video"
                        android:id="@+id/textView2"
                        android:layout_below="@+id/textView3"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="44dp"
                        android:layout_marginRight="100dp"
                        android:textColor="#9413f0"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Upload Photo/Video"
                        android:id="@+id/textView6"
                        android:layout_below="@+id/textView2"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="95dp"
                        android:textColor="#FF9413F0"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Documents/Written Text"
                        android:id="@+id/textView7"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="73dp"
                        android:textColor="#FF9413F0"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Delete Media files "
                        android:id="@+id/textView8"
                        android:layout_marginTop="45dp"
                        android:layout_marginRight="195dp"
                        android:layout_below="@+id/textView4"
                        android:layout_alignParentStart="true"
                        android:textColor="#FF9413F0"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:id="@+id/LogOut"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="50dp" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>

</LinearLayout>
