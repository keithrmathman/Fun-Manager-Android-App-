<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.keithr.funmanager.login"
    android:src = "@drawable/logintext"
    android:background="@drawable/bluewater"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LOGIN HERE!"
        android:id="@+id/loginview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#33f5c8"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColorHighlight="#2955d9"
        android:textIsSelectable="false"
        android:visibility="visible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="User ID"
        android:id="@+id/userIDview"
        android:layout_below="@+id/loginview"
        android:layout_alignParentStart="true"
        android:layout_marginTop="96dp"
        android:textColor="#62f7f2"
        android:textSize="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password"
        android:id="@+id/passwordview"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="#56fbd1"
        android:textSize="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/passwordview"
        android:layout_alignEnd="@+id/loginview" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/userIDview"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignEnd="@+id/loginview"
        android:textStyle="normal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginbutton"
        android:layout_marginTop="77dp"
        android:textColor="#5c2be0"
        android:textSize="25dp"
        android:textStyle="italic"
        android:layout_below="@+id/editText2"
        android:layout_toEndOf="@+id/userIDview" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up "
        android:id="@+id/signupbutton"
        android:layout_alignTop="@+id/loginbutton"
        android:layout_toEndOf="@+id/loginbutton"
        android:textSize="25dp"
        android:textColor="#5c2be0"
        android:textStyle="italic" />
</RelativeLayout>
